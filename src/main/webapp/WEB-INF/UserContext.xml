<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd">

  <context:component-scan base-package="org.amc" />
  
  <bean id="userServlet" class="org.amc.servlet.UserServlet">
  <property name="userDAO" ref="myUserDAO"/>
  <property name="userRolesDAO" ref="myUserRolesDAO"/>
  </bean>
  
  <bean id="myUserDAO" class="org.amc.dao.UserDAO" scope="prototype">
     <constructor-arg ref="entityManagerFactory"/>
  </bean>
  
  <bean id="myUserRolesDAO" class="org.amc.dao.UserRolesDAO" scope="prototype">
     <constructor-arg ref="entityManagerFactory"/>
  </bean>      
</beans>
